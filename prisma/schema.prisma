generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}
model Blog {
  id          String        @id @default(uuid())
  title       String
  // Instead of storing just a string, link to Media
  thumbnailId String?       // foreign key to Media
  thumbnail   Media?        @relation(fields: [thumbnailId], references: [id])

  date        DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  contents    BlogContent[]
}

model BlogContent {
  id         String       @id @default(uuid())
  type       ContentType
  value      String       @db.Text   // paragraph = HTML, image/video = URL
  orderIndex Int
  blog       Blog         @relation(fields: [blogId], references: [id], onDelete: Cascade)
  blogId     String
}

model Media {
  id        String   @id @default(uuid())
  url       String
  thumbnail String?
  type      MediaType
  createdAt DateTime @default(now())

  // A media item can be used as a blog thumbnail
  blogs     Blog[]
}

enum ContentType {
  paragraph
  image
  video
}

enum MediaType {
  image
  video
  file
}

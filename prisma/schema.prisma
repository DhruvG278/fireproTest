generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Blog {
  id          String        @id @default(uuid())
  title       String
  thumbnail   String?       // optional thumbnail URL
  thumbnailType ThumbnailType?
  date        DateTime
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  contents    BlogContent[]
}

model BlogContent {
  id         String       @id @default(uuid())
  type       ContentType
  value      String       @db.Text   // paragraph = HTML, image/video = URL
  orderIndex Int
  blog       Blog         @relation(fields: [blogId], references: [id], onDelete: Cascade)
  blogId     String
}

model Media {
  id        String   @id @default(uuid())
  url       String
  type      MediaType
  createdAt DateTime @default(now())
}

enum ContentType {
  paragraph
  image
  video
}

enum ThumbnailType {
  image
  video
}

enum MediaType {
  image
  video
  file
}
